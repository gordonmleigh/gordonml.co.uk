!!!5
html
  head
    meta(charset='utf8')
    title #{title} &ndash; Gordon Mackenzie-Leigh
    meta(name='description', content='Gordon Mackenzie-Leigh: software developer, engineer, EngD student')

    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,700|Droid+Serif:400,400italic,700')
    link(rel='stylesheet', type='text/css', href='/html5reset-1.6.1.css')
    link(rel='stylesheet', type='text/css', href='/build/main.css')

    script(type='text/javascript', src='//code.jquery.com/jquery-1.10.1.min.js')

    <!--[if lt IE 9]>
    <script src="html5shiv.js"></script>
    <![endif]-->

  body
    header
      .container
        h1: a(href='/') Gordon Mackenzie-Leigh
        .tagline Software developer, engineer, EngD student
        a.me(href='/post/about'): img(src='/me.png')
        .badges
          a(href='http://uk.linkedin.com/in/gordonmleigh/', title="LinkedIn"): img(src='/in.png')
          a(href='https://twitter.com/gordonmleigh', title='Twitter'): img(src='/tw.png')
          a(href='https://github.com/gordonmleigh', title='GitHub'): img(src='/github.png')
          // a(href='https://plus.google.com/'): img(src='/gplus.png')
        nav
          ul
            li: a(href='/', class=active(url, '/')) Home
            li: a(href='/post/about', class=active(url, '/post/about')) About Me

    .container
      block content

    footer
      .container
        p Copyright &copy; 2013 Gordon Mackenzie-Leigh


  script(type='text/javascript').
    jQuery(function($){
      $('.obscure-mail').each(function(){
        a = $(this);
        var href = a.data('value').replace(/[^A-Za-z0-9@\._-]/g, '');
        a.attr('href', 'mailto:'+href);
      });
    });